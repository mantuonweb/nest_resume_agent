{
  "name": "backend-nestjs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend-nestjs/src",
  "projectType": "application",
  "tags": ["type:backend", "scope:api", "framework:nestjs"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/backend-nestjs",
        "main": "apps/backend-nestjs/src/main.ts",
        "tsConfig": "apps/backend-nestjs/tsconfig.app.json",
        "assets": ["apps/backend-nestjs/src/assets"]
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "backend-nestjs:build",
        "watch": true
      },
      "configurations": {
        "development": {
          "buildTarget": "backend-nestjs:build:development"
        },
        "production": {
          "buildTarget": "backend-nestjs:build:production"
        }
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "eslint \"{src,test}/**/*.ts\" --fix",
        "cwd": "apps/backend-nestjs"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/apps/backend-nestjs"],
      "options": {
        "command": "jest",
        "cwd": "apps/backend-nestjs"
      }
    }
  }
}